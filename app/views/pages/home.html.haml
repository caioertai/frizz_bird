- left_skrollr_data = { '0' => 'opacity: 1; top: 0px; left: 0px', '500' => 'opacity: 0; top: -200px; left: -300px' }
- right_skrollr_data = { '0' => 'opacity: 1; top: 0px; right: 0px', '500' => 'opacity: 0; top: -200px; right: -300px' }
- top_skrollr_data = { '0' => 'opacity: 0.05; top: 0px; transform: scale(1)', '500' => 'opacity: 0.02; top: -200px; transform: scale(1.5)' }
- fade_skrollr_data = { '0' => 'opacity: 1', '50' => 'opacity: 0; display: block', '51' => 'display: none' }

#landing.decorations-box
  .frizz-shadow{ data: left_skrollr_data }= image_tag 'frizz-shadow.svg', class: 'wind-blown-animation', alt: 'Frizz'
  .frizz-shadow.inverted{ data: right_skrollr_data }= image_tag 'frizz-shadow.svg', class: 'wind-blown-animation', alt: 'Frizz'
  .frizz{ data: left_skrollr_data }= image_tag 'frizz.svg', class: 'wind-blown-animation', alt: 'Frizz Shadow'
  .frizz.inverted{ data: right_skrollr_data }= image_tag 'frizz.svg', class: 'wind-blown-animation', alt: 'Frizz Shadow'
  .bangs{ data: left_skrollr_data }= image_tag 'bangs.svg', alt: 'Bangs'
  .bangs.inverted{ data: right_skrollr_data }= image_tag 'bangs.svg', alt: 'Bangs'

  .main-container
    = image_tag 'logo.svg', class: 'logo', alt: 'Frizz Bird'
    = image_tag 'logo-shadow.svg', class: 'logo-shadow', data: top_skrollr_data, alt: 'Frizz Bird Shadow'
    = form_tag products_search_path, id: 'product-search', method: :get, remote: true do
      = text_field_tag :query, params[:query], :'aria-label' => 'Digite nome ou código de barra do produto', class: 'main-search', placeholder: 'Digite nome ou código de barra do produto'
      .main-search-loader

  = link_to '#usp', class: 'scroll-call scroll-to', title: 'Rolar abaixo', data: fade_skrollr_data do
    .scroll-call-arrow
      
.darkruby-wrapper{style: 'display: none'}
  #product-show.container.padded

.usp-wrapper
  #usp.container.padded
    %h2 Frizz Bird
    %p Mais informação em breve

= render 'components/footer'